<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f3f4f5"
    android:orientation="vertical">

    <com.rvakva.travel.devkit.widget.MyTitleBar
        android:id="@+id/billListMtb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="16dp"
        android:paddingRight="@dimen/permission_sp_16"
        android:orientation="vertical">

        <com.rvakva.travel.devkit.widget.MyRecyclerView
            android:id="@+id/recyclerviewBill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/size_16dp"
            android:paddingEnd="@dimen/size_16dp"
            android:background="@color/white"/>
    </LinearLayout>

</LinearLayout>