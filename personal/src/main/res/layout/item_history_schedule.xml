<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_12dp"
    android:id="@+id/pcHistoryItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cor4_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/size_16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/pcHistoryCarNoTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/black_sub"
                android:textSize="@dimen/size_12sp" />
            <TextView
                android:id="@+id/pcHistoryTypeTv"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="--"
                android:background="@drawable/cor_left_007aff_bg"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/size_12sp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:id="@+id/pcHistoryAddressTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/home_icon_route"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="--"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14sp"
            android:layout_marginRight="@dimen/size_16dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/size_16dp">

            <TextView
                android:id="@+id/pcHistoryTimeOneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_sub"
                android:textSize="@dimen/size_14sp"
                android:text="2020-05-15"
                android:drawableLeft="@drawable/home_icon_time"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:src="@drawable/oval_666_bg"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/size_1dp"/>
            <TextView
                android:id="@+id/pcHistoryTimeTwoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_sub"
                android:textSize="@dimen/size_14sp"
                android:text="检票 14:00"
                android:layout_marginLeft="8dp"/>
            <ImageView
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:src="@drawable/oval_666_bg"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/size_1dp"/>
            <TextView
                android:id="@+id/pcHistoryTimeThreeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_sub"
                android:textSize="@dimen/size_14sp"
                android:text="出发 14:10"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1px"
            android:layout_marginTop="@dimen/size_16dp"
            android:src="@color/color_line"
            android:layout_marginRight="@dimen/size_16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/size_16dp">

            <TextView
                android:id="@+id/pcHistoryTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:text="--"
                android:textColor="@color/black_sub"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/pcHistoryStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/common_icon_expand"
                android:drawablePadding="@dimen/size_8dp"
                android:gravity="right"
                android:text="--"
                android:textColor="@color/black_sub"
                android:textSize="@dimen/size_12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>