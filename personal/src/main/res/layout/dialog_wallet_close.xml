<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cor4_white"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_16dp"
    android:paddingEnd="@dimen/size_16dp"
    android:paddingBottom="@dimen/size_20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请结算"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/size_16sp" />

        <ImageView
            android:id="@+id/wallerDialogImgX"
            android:layout_width="46dp"
            android:layout_alignParentRight="true"
            android:layout_height="34dp"
            android:paddingRight="16dp"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="16dp"
            android:src="@drawable/personal_img_x" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_34dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="@dimen/size_8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/black"
            android:textSize="@dimen/size_24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/wallerDialogEtValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入结算金额"
            android:inputType="number|numberDecimal"
            android:paddingStart="@dimen/size_8dp"
            android:textColorHint="@color/cccccc"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="@dimen/size_24sp"/>

    </LinearLayout>

    <View style="@style/LineHorizontal" />

    <TextView
        android:id="@+id/wallerDialogTvGo"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/size_24dp"
        android:layout_weight="1"
        android:background="@drawable/cor6_blue"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16sp" />

</LinearLayout>