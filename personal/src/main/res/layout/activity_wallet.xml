<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.rvakva.bus.personal.ui.WalletActivity">

    <com.rvakva.travel.devkit.widget.MyTitleBar
        android:id="@+id/walletMtb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8dp"
        android:background="@color/f3f4f5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/size_16dp"
        android:paddingTop="@dimen/size_32dp"
        android:text="账户余额(元)"
        android:textColor="@color/black"
        android:textSize="@dimen/size_14sp" />

    <TextView
        android:id="@+id/walletTvBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/size_16dp"
        android:paddingTop="@dimen/size_4dp"
        android:paddingBottom="@dimen/size_16dp"
        android:text="读取中..."
        android:textColor="@color/color_blue"
        android:textSize="32sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/walletTvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/size_16dp"
        android:paddingBottom="@dimen/size_24dp"
        android:text="如后台未设置提成规则，收入将不会进入账户余额"
        android:textColor="@color/black_sub"
        android:textSize="@dimen/size_14sp"/>

    <TextView
        android:id="@+id/walletTvCharge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:background="@drawable/cor6_blue"
        android:elevation="@dimen/size_4dp"
        android:gravity="center"
        android:text="余额充值"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16sp" />

    <View
        style="@style/LineHorizontal"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"/>

    <TextView
        android:id="@+id/walletTvClose"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:background="@drawable/personal_btn_wallet_close"
        android:layout_marginTop="12dp"
        android:elevation="@dimen/size_4dp"
        android:gravity="center"
        android:text="申请结算"
        android:textColor="@color/color_blue"
        android:textSize="@dimen/size_16sp" />

    <View
        style="@style/LineHorizontal"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"/>

</LinearLayout>