<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cor4_white"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_16dp"
    android:paddingTop="@dimen/size_32dp"
    android:paddingEnd="@dimen/size_16dp"
    android:paddingBottom="@dimen/size_24dp">

    <TextView
        android:id="@+id/chargeDialogTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size_8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/size_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_34dp"
        android:layout_marginBottom="@dimen/size_8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/black"
            android:textSize="@dimen/size_24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/chargeDialogEtValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="number|numberDecimal"
            android:paddingStart="@dimen/size_4dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="@dimen/size_24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View style="@style/LineHorizontal" />

    <TextView
        android:id="@+id/chargeDialogTvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_8dp"
        android:paddingBottom="@dimen/size_32dp"
        android:textColor="@color/black_desc"
        android:textSize="@dimen/size_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44dp"
        android:orientation="horizontal"
        android:paddingStart="@dimen/size_16dp"
        android:paddingEnd="@dimen/size_16dp">

        <TextView
            android:id="@+id/chargeDialogTvAction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/size_20dp"
            android:layout_weight="1"
            android:background="@drawable/cor6_blue"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp" />

        <TextView
            android:id="@+id/chargeDialogTvCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cor6_blue"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp" />

    </LinearLayout>
</LinearLayout>