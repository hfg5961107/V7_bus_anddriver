<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="PasswordInput">
        <item name="android:maxLength">20</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="NumberInputMax11">
        <item name="android:maxLength">11</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="NumberInputMax6">
        <item name="android:maxLength">6</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="NumberInputMax4">
        <item name="android:maxLength">4</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_line</item>
        <item name="android:layout_height">@dimen/size_1px</item>
    </style>

    <style name="LineVertical">
        <item name="android:layout_width">@dimen/size_1px</item>
        <item name="android:background">@color/color_line</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>