<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="PasswordInput">
        <item name="android:maxLength">20</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="NumberInputMax11">
        <item name="android:maxLength">11</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="NumberInputMax6">
        <item name="android:maxLength">6</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="NumberInputMax4">
        <item name="android:maxLength">4</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_line</item>
        <item name="android:layout_height">@dimen/size_1px</item>
    </style>

    <style name="LineVertical">
        <item name="android:layout_width">@dimen/size_1px</item>
        <item name="android:background">@color/color_line</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>


<!--    弹窗主题-->
    <style name="CenterDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/DialogCenter</item>
    </style>

    <style name="DialogCenter">
        <item name="android:windowEnterAnimation">@anim/dialog_center_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_center_exit</item>
    </style>


    <style name="BottomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/DialogBottom</item>
    </style>

    <style name="DialogBottom">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_exit</item>
    </style>

</resources>