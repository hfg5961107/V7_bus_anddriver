<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/size_16dp">

    <TextView
        android:textStyle="bold"
        android:id="@+id/naviBottomTvAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/cor100_size_8_blue"
        android:drawablePadding="@dimen/size_16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16sp" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/naviBottomTvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/cor100_size_8_blue"
        android:drawableEnd="@drawable/common_icon_phone"
        android:drawablePadding="@dimen/size_16dp"
        android:gravity="center"
        android:paddingTop="@dimen/size_6dp"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16sp" />

</LinearLayout>