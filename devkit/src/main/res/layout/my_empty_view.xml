<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/myEmptyViewFlLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="@dimen/size_44dp"
            android:layout_height="@dimen/size_44dp"
            android:layout_gravity="center" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/myEmptyViewLlError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myEmptyViewTvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/size_16dp"
            android:gravity="center"
            android:textColor="@color/black_desc"
            android:textSize="@dimen/size_16sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/myEmptyViewTvAction"
            android:paddingStart="@dimen/size_28dp"
            android:paddingEnd="@dimen/size_28dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_44dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_34dp"
            android:layout_marginEnd="@dimen/size_16dp"
            android:background="@drawable/cor6_blue"
            android:gravity="center"
            android:text="立即认证"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp" />


    </LinearLayout>
</FrameLayout>