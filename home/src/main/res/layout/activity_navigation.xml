<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <com.amap.api.navi.AMapNaviView
        android:id="@+id/navi_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="成都市-珠江国际中心写字楼"
            android:textSize="@dimen/size_14sp"
            android:drawableLeft="@drawable/home_icon_route"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_12dp"
            android:background="@drawable/cor4_white"
            android:textColor="@color/black_sub"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44dp"
            android:background="@color/black"
            android:text="状态按钮"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp"
            android:stateListAnimator="@drawable/anim_state_btn"/>
    </LinearLayout>
</LinearLayout>