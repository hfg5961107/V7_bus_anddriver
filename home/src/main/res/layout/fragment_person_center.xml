<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44dp"
        android:text="个人中心"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_12dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/pcHeaderIv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/home_personal_profile_photo"
            android:layout_marginLeft="@dimen/size_24dp"
            android:layout_marginTop="@dimen/size_24dp"
            android:layout_marginBottom="@dimen/size_24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/size_16dp">
            <TextView
                android:id="@+id/pcDriverNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/size_16sp"/>
            <TextView
                android:id="@+id/pcDriverPhoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/black_desc"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/size_4dp"
                android:textSize="@dimen/size_14sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_16dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/pcWalletLl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_52dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_personage_wallet"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的钱包"
                android:textSize="@dimen/size_14sp"
                android:textColor="@color/black"
                android:layout_marginLeft="4dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_icon_expand"
                android:layout_marginRight="@dimen/size_16dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1px"
            android:src="@color/color_line"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"/>
        <LinearLayout
            android:id="@+id/pcSysSetLl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_52dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_personage_set"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="系统设置"
                android:textSize="@dimen/size_14sp"
                android:textColor="@color/black"
                android:layout_marginLeft="4dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_icon_expand"
                android:layout_marginRight="@dimen/size_16dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1px"
            android:src="@color/color_line"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"/>
        <LinearLayout
            android:id="@+id/pcServicePhoneLl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_52dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_personage_service"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="联系客服"
                android:textSize="@dimen/size_14sp"
                android:textColor="@color/black"
                android:layout_marginLeft="4dp"/>
            <TextView
                android:id="@+id/pcServicePhoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_desc"
                android:layout_marginRight="@dimen/size_16dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>