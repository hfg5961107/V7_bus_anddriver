<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemPassengerNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王先生 1人"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/size_14sp" />

        <TextView
            android:id="@+id/itemPassengerPhoneTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_4dp"
            android:text="/ 13566274638"
            android:textColor="@color/black_sub"
            android:textSize="@dimen/size_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12dp"
        android:layout_marginBottom="@dimen/size_8dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/itemHasCarRl"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="@dimen/size_44dp"
            android:layout_weight="1"
            android:background="@drawable/cor4_dotted_line_white_bg">

            <TextView
                android:id="@+id/itemHasCarTv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_44dp"
                android:gravity="center"
                android:text="已上车"
                android:textColor="@color/black_desc"
                android:textSize="@dimen/size_16sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/itemHasCarIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/com_passenger_select"
                android:visibility="gone"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="@dimen/size_44dp" />

        <RelativeLayout
            android:id="@+id/itemNoCarRl"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="@dimen/size_44dp"
            android:layout_weight="1"
            android:background="@drawable/cor4_dotted_line_white_bg">

            <TextView
                android:id="@+id/itemNoCarTv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_44dp"
                android:gravity="center"
                android:text="未上车"
                android:textColor="@color/black_desc"
                android:textSize="@dimen/size_16sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/itemNoCarIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/com_passenger_select"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>