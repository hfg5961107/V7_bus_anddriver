<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/f3f4f5"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rvakva.travel.devkit.widget.MyTitleBar
        android:id="@+id/detailMtb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/f3f4f5">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:paddingBottom="@dimen/size_60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_16dp"
                    android:paddingRight="@dimen/size_16dp"
                    android:layout_marginTop="@dimen/size_16dp">
                    <TextView
                        android:id="@+id/detailCarNumberSeatTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="川A 33566 / 7座"
                        android:textColor="@color/black_sub"
                        android:textSize="@dimen/size_12sp"
                        />
                    <TextView
                        android:id="@+id/detailRestSeatTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="余座 2"
                        android:textSize="@dimen/size_12sp"
                        android:gravity="right"
                        android:textColor="@color/black_sub"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/detailStartSiteLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_16dp"
                    android:paddingRight="@dimen/size_16dp"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/size_16dp"
                        android:layout_height="@dimen/size_16dp"
                        android:src="@drawable/com_icon_start"/>

                    <TextView
                        android:id="@+id/detailStartSiteTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="成都市金牛区泉水北路泉水人家一期"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp"
                        android:layout_marginLeft="@dimen/size_8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/detailEndSiteLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_16dp"
                    android:paddingRight="@dimen/size_16dp"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/size_16dp"
                        android:layout_height="@dimen/size_16dp"
                        android:src="@drawable/com_icon_end"/>

                    <TextView
                        android:id="@+id/detailEndSiteTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="珠江国际写字楼"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp"
                        android:layout_marginLeft="@dimen/size_8dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/detailBeginTimeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/common_icon_time"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:layout_marginRight="@dimen/size_16dp"
                    android:text="2020-05-15 · 检票 14:00 · 出发 14:10"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/size_16dp"/>






                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/f3f4f5"/>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="乘客信息"
                        android:textSize="@dimen/size_12sp"
                        android:textColor="@color/black_sub"
                        android:paddingLeft="@dimen/size_16dp"/>
                    <TextView
                        android:id="@+id/detailCheckTicketTv"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="重新检票"
                        android:background="@drawable/cor_left_blue_bg"
                        android:paddingLeft="16dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12sp"
                        android:gravity="center_vertical"
                        android:drawableRight="@drawable/com_ticket_arraw"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerviewPassenger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:visibility="visible"/>






                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/f3f4f5"/>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="订单信息"
                    android:textSize="@dimen/size_12sp"
                    android:textColor="@color/black_sub"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/size_16dp"/>
                
                <RelativeLayout
                    android:id="@+id/detailOrderNoRl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_44dp"
                    android:paddingLeft="@dimen/size_16dp"
                    android:paddingRight="@dimen/size_16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="班次编号"
                        android:textSize="@dimen/size_14sp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/detailOrderNoTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5621564984561561"
                        android:textSize="@dimen/size_14sp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1px"
                        android:src="@color/color_line"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/detailCancelTimeRl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_44dp"
                    android:paddingLeft="@dimen/size_16dp"
                    android:paddingRight="@dimen/size_16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消时间"
                        android:textSize="@dimen/size_14sp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/detailCancelTimeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020-05-17 15:33"
                        android:textSize="@dimen/size_14sp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1px"
                        android:src="@color/color_line"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/detailCompleteTimeRl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_44dp"
                    android:paddingLeft="@dimen/size_16dp"
                    android:paddingRight="@dimen/size_16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="完成时间"
                        android:textSize="@dimen/size_14sp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/detailCompleteTimeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020-05-17 15:33"
                        android:textSize="@dimen/size_14sp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1px"
                        android:src="@color/color_line"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/detailIncomeRl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_44dp"
                    android:paddingLeft="@dimen/size_16dp"
                    android:paddingRight="@dimen/size_16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本单收入"
                        android:textSize="@dimen/size_14sp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/detailIncomeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ 100"
                        android:textSize="@dimen/size_14sp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1px"
                        android:src="@color/color_line"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/orderDetailOperationBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:layout_marginBottom="@dimen/size_16dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/cor4_com_btn_blue_bg"
            android:text="请开始检票"
            android:textSize="@dimen/size_16sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

</LinearLayout>