<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f3f4f5"
    android:orientation="vertical">

    <com.rvakva.travel.devkit.widget.MyTitleBar
        android:id="@+id/detailMtb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/f3f4f5"
        android:paddingTop="10dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/orderDetailBottomLin"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_16dp"
                    android:paddingRight="@dimen/size_16dp">

                    <TextView
                        android:id="@+id/detailCarNumberSeatTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/black_sub"
                        android:textSize="@dimen/size_12sp" />

                    <TextView
                        android:id="@+id/detailRestSeatTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="--"
                        android:textColor="@color/black_sub"
                        android:textSize="@dimen/size_12sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detailStartSiteLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_16dp"
                    android:paddingRight="@dimen/size_16dp">

                    <ImageView
                        android:layout_width="@dimen/size_16dp"
                        android:layout_height="@dimen/size_16dp"
                        android:src="@drawable/com_icon_start" />

                    <TextView
                        android:id="@+id/detailStartSiteTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_8dp"
                        android:text="--"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detailEndSiteLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_16dp"
                    android:paddingRight="@dimen/size_16dp">

                    <ImageView
                        android:layout_width="@dimen/size_16dp"
                        android:layout_height="@dimen/size_16dp"
                        android:src="@drawable/com_icon_end" />

                    <TextView
                        android:id="@+id/detailEndSiteTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_8dp"
                        android:text="--"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:layout_marginRight="@dimen/size_16dp"
                    android:layout_marginBottom="@dimen/size_16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/detailBeginTimeOneTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/home_icon_time"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="2020-05-15"
                        android:textColor="@color/black_sub"
                        android:textSize="@dimen/size_14sp" />

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="@dimen/size_1dp"
                        android:src="@drawable/oval_666_bg" />

                    <TextView
                        android:id="@+id/detailBeginTimeTwoTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:includeFontPadding="false"
                        android:text="检票 14:00"
                        android:textColor="@color/black_sub"
                        android:textSize="@dimen/size_14sp" />

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="@dimen/size_1dp"
                        android:src="@drawable/oval_666_bg" />

                    <TextView
                        android:id="@+id/detailBeginTimeThreeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:includeFontPadding="false"
                        android:text="出发 14:10"
                        android:textColor="@color/black_sub"
                        android:textSize="@dimen/size_14sp" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/f3f4f5" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/size_16dp"
                        android:text="乘客信息"
                        android:textColor="@color/black_sub"
                        android:textSize="@dimen/size_12sp" />

                    <TextView
                        android:id="@+id/detailCheckTicketTv"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:background="@drawable/cor_left_blue_bg"
                        android:drawableRight="@drawable/com_ticket_arraw"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="10dp"
                        android:text="检票"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_12sp"
                        android:visibility="gone" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerviewPassenger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/f3f4f5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:paddingLeft="@dimen/size_16dp"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:text="班次信息"
                    android:textColor="@color/black_sub"
                    android:textSize="@dimen/size_12sp" />

                <RelativeLayout
                    android:id="@+id/detailOrderNoRl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_44dp"
                    android:paddingLeft="@dimen/size_16dp"
                    android:paddingRight="@dimen/size_16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="班次编号"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp" />

                    <TextView
                        android:id="@+id/detailOrderNoTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="--"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1px"
                        android:layout_alignParentBottom="true"
                        android:src="@color/color_line" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/detailCancelTimeRl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_44dp"
                    android:paddingLeft="@dimen/size_16dp"
                    android:paddingRight="@dimen/size_16dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="取消时间"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp" />

                    <TextView
                        android:id="@+id/detailCancelTimeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="--"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1px"
                        android:layout_alignParentBottom="true"
                        android:src="@color/color_line" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/detailCompleteTimeRl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_44dp"
                    android:paddingLeft="@dimen/size_16dp"
                    android:paddingRight="@dimen/size_16dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="完成时间"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp" />

                    <TextView
                        android:id="@+id/detailCompleteTimeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="--"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1px"
                        android:layout_alignParentBottom="true"
                        android:src="@color/color_line" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/detailIncomeRl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_44dp"
                    android:paddingLeft="@dimen/size_16dp"
                    android:paddingRight="@dimen/size_16dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="总计金额"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp" />

                    <TextView
                        android:id="@+id/detailIncomeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="--"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1px"
                        android:layout_alignParentBottom="true"
                        android:src="@color/color_line" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/orderDetailBottomLin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingTop="@dimen/size_16dp">

            <LinearLayout
                android:id="@+id/orderDetailNavigationLin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_44dp"
                android:layout_marginLeft="@dimen/size_16dp"
                android:layout_marginTop="@dimen/size_12dp"
                android:layout_marginRight="@dimen/size_16dp"
                android:background="@drawable/cor4_com_btn_black_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableLeft="@drawable/com_way_navigation"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="继续导航"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/orderDetailOperationBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_44dp"
                android:layout_marginLeft="@dimen/size_16dp"
                android:layout_marginTop="@dimen/size_12dp"
                android:layout_marginRight="@dimen/size_16dp"
                android:layout_marginBottom="@dimen/size_16dp"
                android:background="@drawable/cor4_com_btn_blue_bg"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>