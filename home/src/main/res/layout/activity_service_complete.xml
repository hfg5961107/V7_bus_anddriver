<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rvakva.travel.devkit.widget.MyTitleBar
        android:id="@+id/completeMtb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/size_1dp"
        android:background="@color/white"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/com_icon_complete"
            android:layout_marginTop="64dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务已完成"
            android:textSize="@dimen/size_16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>
        <TextView
            android:id="@+id/completeTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本次总共耗时：0小时0分"
            android:textSize="@dimen/size_14sp"
            android:textColor="@color/black_desc"
            android:layout_marginTop="@dimen/size_4dp"/>

        <Button
            android:id="@+id/completeBackBtn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/cor4_st1_blue"
            android:layout_marginLeft="@dimen/size_32dp"
            android:layout_marginRight="@dimen/size_32dp"
            android:layout_marginTop="@dimen/size_48dp"
            android:text="返回"
            android:textColor="@color/color_blue"/>
    </LinearLayout>
</LinearLayout>