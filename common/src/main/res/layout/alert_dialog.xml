<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cor4_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/alertDialogTvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/size_40dp"
        android:paddingBottom="@dimen/size_40dp"
        android:paddingStart="@dimen/size_24dp"
        android:paddingEnd="24dp"
        android:text="该订单已被抢"
        android:textColor="@color/black"
        android:textSize="@dimen/size_18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:divider="@drawable/size_1_ebebeb"
        android:dividerPadding="@dimen/size_16dp"
        android:orientation="horizontal"
        android:showDividers="middle">

        <TextView
            android:id="@+id/alertDialogTvLeftAction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/blue"
            android:textSize="@dimen/size_18sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/alertDialogTvRightAction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/blue"
            android:textSize="@dimen/size_18sp" />

    </LinearLayout>

</LinearLayout>